{
  "name": "node-js-template",
  "version": "1.0.0",
  "description": "Node.js template with best practices - PostgreSQL, Redis, Kafka, MinIO, RBAC",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--conditions=development' tsx --watch --env-file .env src/index.ts",
    "dev:fast": "cross-env NODE_OPTIONS='--conditions=development' tsx --watch --env-file .env src/index.ts",
    "dev:full": "cross-env NODE_OPTIONS='--conditions=development' tsx --watch --env-file .env.full src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "migration:generate": "node scripts/generate-migration.js",
    "migration:run": "node scripts/run-migrations.js"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "postgresql",
    "redis",
    "kafka",
    "minio",
    "rbac",
    "best-practices"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^7.4.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "minio": "^8.0.1",
    "multer": "^2.0.2",
    "mysql2": "^3.17.2",
    "pg": "^8.12.0",
    "prisma": "^7.4.0",
    "redis": "^4.7.0",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.14.15",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^2.0.5",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
