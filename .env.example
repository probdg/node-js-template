# Environment Configuration
NODE_ENV=development
HOST=localhost
PORT=3000
API_VERSION=v1

# Database Configuration (PostgreSQL)
# Set DB_ENABLED to false to skip database connection during development
DB_ENABLED=true
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nodeapp
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
# Set REDIS_ENABLED to false to skip Redis connection during development
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Kafka Configuration
# Set KAFKA_ENABLED to false to skip Kafka connection during development
KAFKA_ENABLED=true
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=node-app
KAFKA_GROUP_ID=node-app-group

# MinIO Configuration
# Set MINIO_ENABLED to false to skip MinIO connection during development
MINIO_ENABLED=true
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=uploads

# JWT Configuration
JWT_SECRET=change-this-jwt-secret-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=change-this-jwt-refresh-secret-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# DDoS Detection
DDOS_WINDOW_SECONDS=60
DDOS_REQUEST_THRESHOLD=100
DDOS_BLOCK_THRESHOLD=200
DDOS_BLOCK_DURATION=300

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000

# Vault (Encryption)
# Set VAULT_ENABLED to false to skip vault encryption during development
VAULT_ENABLED=true
VAULT_ENCRYPTION_KEY=default-test-key-32-chars-long-for-testing-only
VAULT_ALGORITHM=aes-256-gcm

# Upload Configuration
UPLOAD_DIRECTORY=uploads
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain
